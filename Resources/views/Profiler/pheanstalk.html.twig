{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    <div class="sf-toolbar-block">
        <div class="sf-toolbar-icon">
            <a href="{{ path('_profiler', { 'token': token, 'panel': name }) }}">
                <span style="width:0px; height: 28px; vertical-align: middle;"></span>
                <span class="sf-toolbar-status">{{ collector.connections|length }}</span> Jobs
            </a>
        </div>
        <div class="sf-toolbar-info">
            <div class="sf-toolbar-info-piece">
                <b>Connections</b>
                <span>{{ collector.connections|length }}</span>
            </div>
            <div class="sf-toolbar-info-piece">
                <b>Tubes</b>
                <span>{{ '0' }}</span>
            </div>
            <div class="sf-toolbar-info-piece">
                <b>Jobs</b>
                <span>{{ '0' }}</span>
            </div>
        </div>
    </div>
{% endblock %}

{% block menu %}
    <span class="label">
        <span class="icon"><img src="data:image/png;base64," alt=""></span>
        <strong>Pheanstalk</strong>
        <span class="count">
            <span>{{ '0' }}</span>
        </span>
    </span>
{% endblock %}

{% block panel %}
    <h2>Connections</h2>

    {{ dump(collector) }}

    {% set data = [] %}
    {{ block('table_connection') }}

    <h2>Tubes</h2>
    {% set data = [] %}
    {{ block('table_tube') }}

    <h2>Jobs</h2>
    {% set data = [] %}
    {{ block('table_job') }}

    {{ block('javascript') }}
{% endblock %}

{% block table_connection %}
    <table>
        <tr>
            <th>Name</th>
            <th>Host</th>
            <th>Port</th>
            <th>Timeout</th>
        </tr>
        {% for id, row in data %}
            <tr>
                <th>{{ id }}</th>
                <td>{{ row.host }}</td>
                <td>{{ row.port }}</td>
                <td>{{ row.timeout }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block table_tube %}
    <table>
        <tr>
            <th>Name</th>
            <th>Queued Jobs</th>

        </tr>
        {% for id, row in data %}
            <tr>
                <th>{{ id }}</th>
                <td>{{ row.jobs }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block table_jobs %}
    <table>
        <tr>
            <th>Name</th>
            <th>Queued Jobs</th>

        </tr>
        {% for id, row in data %}
            <tr>
                <th>{{ id }}</th>
                <td>{{ row.jobs }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}